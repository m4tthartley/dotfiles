xhost +SI:localuser:root
export GTK_CSD=0

setxkbmap -layout gb -variant mac

# I3 Stuff
xrandr --output DP-2 --mode 1600x1200
xrandr --output DP-2 --left-of DP-0

# Cinnamon Stuff
export GTK_THEME=Mint-X-Dark

gsettings set org.cinnamon.desktop.keybindings.wm switch-to-workspace-1 "['<Super>1']"
